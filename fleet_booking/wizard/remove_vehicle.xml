<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="remove_vehicle_wizard_view_form" model="ir.ui.view">
      <field name="name">Remove Vehicle</field>
      <field name="model">fleet_booking.remove_vehicle_wizard</field>
      <field name="arch" type="xml">
        <form string="Remove Vehicle">
          <sheet>
            <group>
              <field name="vehicle_id" options="{'no_create': True, 'no_open': True}"/>
              <field name="removal_reason"/>
              <field name="selling_price" attrs="{'invisible': [('removal_reason', '!=', 'sold')]}"/>
              <field name="journal_id"/>
            </group>
            <group>
              <field name="move_line_ids" nolabel="1">
                <tree string="Journal Entries" editable="bottom">
                  <field name="account_id"/>
                  <field name="debit"/>
                  <field name="credit"/>
                </tree>
              </field>
            </group>
          </sheet>
          <footer>
            <button name="action_remove" string="Remove" type="object"/>
          </footer>
        </form>
      </field>
    </record>

    <record id="action_view_remove_vehicle_wizard" model="ir.actions.act_window">
      <field name="name">Remove Vehicle</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">fleet_booking.remove_vehicle_wizard</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>

    </data>
</openerp>
