<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <menuitem name="Rental" parent="base.menu_base_partner" id="rental_contracts" sequence="2"/>

        <record id='fleet_rent_quotations_act' model='ir.actions.act_window'>
          <field name="name">Rent Quotations</field>
          <field name="res_model">fleet_booking.rent</field>
          <field name="view_type">form</field>
          <field name="view_mode">tree,form</field>
          <field name="help" type="html">
            <p class="oe_view_nocontent_create">
              Click to create a new rental document.
            </p>
          </field>
        </record>

        <menuitem action="fleet_rent_quotations_act" parent="rental_contracts" id="rent_quotations_menu"/>

        <record id='fleet_rent_confirmed_act' model='ir.actions.act_window'>
          <field name="name">Rent Confirmed</field>
          <field name="res_model">fleet_booking.rent</field>
          <field name="view_type">form</field>
          <field name="view_mode">tree,form</field>
          <field name="help" type="html">
            <p class="oe_view_nocontent_create">
              Click to create a new rental document.
            </p>
          </field>
        </record>

        <menuitem action="fleet_rent_confirmed_act" parent="rental_contracts" id="rent_confirmed_menu"/>

        <record id='fleet_return_draft_act' model='ir.actions.act_window'>
          <field name="name">Return Draft</field>
          <field name="res_model">fleet_booking.return</field>
          <field name="view_type">form</field>
          <field name="view_mode">tree,form</field>
          <field name="help" type="html">
            <p class="oe_view_nocontent_create">
              Click to create a new rental document.
            </p>
          </field>
        </record>

        <menuitem action="fleet_return_draft_act" parent="rental_contracts" id="return_draft_menu"/>

        <record id='fleet_return_confirmed_open_act' model='ir.actions.act_window'>
          <field name="name">Return Confirmed but Open</field>
          <field name="res_model">fleet_booking.return</field>
          <field name="view_type">form</field>
          <field name="view_mode">tree,form</field>
          <field name="help" type="html">
            <p class="oe_view_nocontent_create">
              Click to create a new rental document.
            </p>
          </field>
        </record>

        <menuitem action="fleet_return_confirmed_open_act" parent="rental_contracts" id="return_confirmed_open_menu"/>

        <record id='fleet_return_confirmed_closed_act' model='ir.actions.act_window'>
          <field name="name">Return Confirmed and Closed</field>
          <field name="res_model">fleet_booking.return</field>
          <field name="view_type">form</field>
          <field name="view_mode">tree,form</field>
          <field name="help" type="html">
            <p class="oe_view_nocontent_create">
              Click to create a new rental document.
            </p>
          </field>
        </record>

        <menuitem action="fleet_return_confirmed_closed_act" parent="rental_contracts" id="return_confirmed_closed_menu"/>

        <record id='fleet_rental_items_to_be_checked_act' model='ir.actions.act_window'>
            <field name="name">Items to be checked</field>
            <field name="res_model">fleet_booking.item_to_be_checked</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create an item to be checked before and after rent.
              </p><p>
                Example: oil, triangle, wrench, toolbox, spare tire, fire extinguisher.
              </p>
            </field>
        </record>

        <menuitem action="fleet_rental_items_to_be_checked_act" parent="base.menu_sale_config" id="fleet_rent_items_to_be_checked_menu"/>

        <record model='ir.ui.view' id='fleet_rent_form'>
          <field name="name">fleet.rent.form</field>
          <field name="model">fleet_booking.rent</field>
          <field name="arch" type="xml">
            <form string="Vehicle Rent">
              <header>
               <field name="state" widget="statusbar" statusbar_visible="draft,booked,confirmed,extended,returned"/>
              </header>
              <sheet>
                <group>
                  <field name="name"/>
                  <field name="partner_id"/>
                  <field name="customer_name"/>
                  <field name="customer_ID"/>
                  <!-- <field name="customer_membership_number"/> -->
                  <!-- <field name="membership_type"/> -->
                </group>
                <group col="2" string="Vehicle Status">
                 <field name="exit_checked_item_ids" widget='many2many_checkboxes'/>
               </group>
              </sheet>
           </form>
          </field>
        </record>
        
   </data>
</openerp>
