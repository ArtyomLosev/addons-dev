<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

      <record id='fleet_rental_document_form' model='ir.ui.view' >
        <field name="name">fleet.rental.document.form</field>
        <field name="model">fleet_rental.document</field>
        <field name="inherit_id" ref="fleet_rental_document.fleet_rental_document_form"/>
        <field name="arch" type="xml">
          <xpath expr="//sheet/group[2]" position="after">
            <field name="check_line_ids" options='{"no_open": true}' mode="tree">
              <tree string="Vehicle checklist" editable="top" create="0" delete="false" open="false">
                <field name="item_id"/>
                <field name="check_yes"/>
                <field name="check_no"/>
              </tree>
            </field>
          </xpath>
        </field>
      </record>

    </data>
</openerp>
