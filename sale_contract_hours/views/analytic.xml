<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="act_unpaid_invoice" model="ir.actions.act_window">
            <field name="name">act_unpaid_invoice</field>
            <field name="res_model">account.invoice</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('invoice_line.account_analytic_id', 'in', [active_id])]</field>
            <field name="context">{
                'search_default_unpaid': True,
                'active_test': False,
            }</field>
        </record>

        <record id="account_analytic_account" model="ir.ui.view">
            <field name="name">account.analytic.account.form</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
            <field eval="80" name="priority"/>
            <field name="arch" type="xml">
                <xpath expr='//div[@name="duration"]' position='after'>
                    <field name="quantity_max_invoiced"/>
                </xpath>
                <xpath expr='//div[@name="buttons"]' position='inside'>
                    <button class="oe_inline oe_stat_button" type="action" name="%(act_unpaid_invoice)d" 
                        icon="fa-usd">
                        <field string="Unpaid" name="unpaid_invoices_amount" widget="statinfo" help="Amount of unpaid invoices. Draft invoices are not included."/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
