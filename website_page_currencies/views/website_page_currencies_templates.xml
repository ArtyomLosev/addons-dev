<openerp>
    <data>
        <template id="index">
            <t t-call="website.layout">
                <t t-set="title">Currency rates to
                    <t t-esc="currencyline.name"/>
                </t>  
                <div class="oe_structure">
                    <div class="container">
                        <h3>Currency rates to <t t-esc="currencyline.name"/></h3>                 
                        <t t-foreach="currencies" t-as="currency">  
                            <p>
                                <a t-attf-href="/currencies/{{ currency.name }}/">
                                <t t-esc="currency.name"/></a>
                                    = <t t-set="currency_value" t-value="((1/currency.rate)/(1/currencyline.rate))"/> 
                                    <t t-esc="'%.3f'%(currency_value)"/> <t t-esc="currencyline.name"/> 
                            </p>                            
                        </t>
                    </div>
                </div>
            </t>
        </template> 
    </data>
</openerp>